<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class"> org.postgresql.Driver</property>
        <property name="hibernate.connection.url"> jdbc:postgresql://localhost:5432/tester</property>
        <property name="hibernate.connection.username">postgres11</property>
        <property name="connection.password">root</property>
        <property name="connection.pool_size">1</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL94Dialect</property>
        <property name="show_sql">true</property>
        <mapping class="org.soippo.entity.Group" />
        <mapping class="org.soippo.entity.User" />
    </session-factory>
</hibernate-configuration>